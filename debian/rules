#!/usr/bin/make -f

build: Makefile
	dh_testdir
	$(MAKE)

Makefile:
	dh_testdir
	CFLAGS='-Wall -O2 -g' ./configure \
	--enable-docs --enable-ssl --enable-localtime --enable-pam \
	--enable-mysql --with-ssl=/usr/lib/ssl --with-mysql=/usr/lib/mysql \
	--mandir='$${prefix}/share/man' --with-malloc=native

clean:
	dh_testdir
	if [ -f Makefile ]; then $(MAKE) clean; fi
	rm -f Makefile
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs usr/sbin usr/bin

	$(MAKE) prefix=`pwd`/debian/tmp/usr suffix="" install install-docs

	install -d debian/tmp/etc/kannel
	install -m 0644 debian/kannel.* debian/tmp/etc/kannel
	install -m 0700 -d debian/tmp/var/log/kannel

binary: binary-arch binary-indep

binary-arch: build install
	dh_testdir
	dh_testroot
#	dh_installdebconf	
	dh_installdocs
#	dh_installexamples
	dh_installinit
#	dh_installcron
	dh_installmanpages utils/start-stop-daemon.8
	cd debian/tmp/usr/share/man/man8 && \
	    for box in bearerbox wapbox smsbox; do \
	    	ln -s kannel.8 $$box.8; \
	    done

	dh_installchangelogs ChangeLog
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-indep: install
